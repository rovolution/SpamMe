<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
	<ImageView 
			android:id="@+id/ImageView01" 
			android:layout_height="10dip" 
			android:layout_width="fill_parent"
			android:background="#000000">
	</ImageView>
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:orientation="horizontal">
		<TextView android:background="@drawable/receivemsgbubbles" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/TextView01"
			android:text="@+id/TextView01" android:layout_weight="1"
			android:layout_marginLeft="3px" android:layout_marginBottom="3px"
			android:layout_marginRight="3px" android:layout_marginTop="3px"
			android:textColor="#000000" android:clickable="true" android:onClick="expandMsgClicked">
		</TextView>
		<ImageView 
			android:id="@+id/ImageView01" 
			android:layout_height="60dip" 
			android:layout_width="60dip"
			android:background="#000000">
		</ImageView>
	</LinearLayout>
</LinearLayout>